@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <br>
    <p class="display-6">Login to continue</p>
    <br>
    <!-- webform.html -->
    <form method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" asp-for="Username">

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" asp-for="Password">

        <button type="submit" asp-page-handler="Submit">Submit</button>
    </form>
    
    @if (Model.LoginFailed)
    {
        <p style="color:red;">Login failed. Please check your credentials and try again.</p>
    }
</div>